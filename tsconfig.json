{
    "compilerOptions": {
        "outDir": "lib",
        "declaration": true,
        "module": "commonjs",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true
    },
    "exclude": [
        "node_modules",
        "lib"
    ],
    "types": [
        "typePatches"
    ]
}